<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FolderFragment">

    <RelativeLayout
        android:id="@+id/recycler_view_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.90"
        app:layout_constraintBottom_toTopOf="@id/controls"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            app:layoutManager="LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.90"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:singleSelection="true">
                <Button
                    android:id="@+id/action_create_file"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File"
                    app:icon="@drawable/ic_add_24dp"
                    app:iconTint="@color/button_text_color"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint" />
                <Button
                    android:id="@+id/action_create_folder"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Folder"
                    app:icon="@drawable/ic_add_24dp"
                    app:iconTint="@color/button_text_color"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <!-- delete, copy, move, rename, open (w/ select application) -->
            <!-- https://stackoverflow.com/questions/69304090/segmentedbutton-in-android-2021 -->
            <!-- https://m3.material.io/components/buttons/overview -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true">
                <Button
                    android:id="@+id/action_open"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Open"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint">
                </Button>
                <Button
                    android:id="@+id/action_rename"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Rename"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint" >
                </Button>
                <Button
                    android:id="@+id/action_copy"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Copy"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint" >
                </Button>
                <Button
                    android:id="@+id/action_move"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Move"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint" >
                </Button>
                <Button
                    android:id="@+id/action_delete"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textColor="@color/button_text_color"
                    app:backgroundTint="@color/button_background_tint" >
                </Button>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
